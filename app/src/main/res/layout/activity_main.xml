<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_main_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="2019.9.20"
            android:textColor="@color/colorBasicInfo"
            android:textSize="40dp"
            />

        <TextView
            android:id="@+id/tv_main_weekday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="星期五"
            android:textSize="40dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_main_location1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textSize="@dimen/main_textsize"
            android:text="北京" />
        <TextView
            android:id="@+id/tv_main_location2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textSize="@dimen/main_textsize"
            android:text="大兴" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_main_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_weather_sunny" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_main_temperaturetmp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="26"
                android:textSize="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_main_temperatureSymbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="℃"
                android:textSize="40dp" />
            <TextView
                android:id="@+id/tv_main_weathercontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="晴(实时)"
                android:textSize="40dp" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_main_temperaturecmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="16~26℃" />
        <TextView
            android:id="@+id/tv_main_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="晴转多云" />
        <TextView
            android:id="@+id/tv_main_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="西风4~6级" />

    </LinearLayout>


</LinearLayout>